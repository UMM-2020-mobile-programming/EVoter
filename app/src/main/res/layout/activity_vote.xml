<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vote Name"
            android:textSize="20dp"
            android:padding="20dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/cardview_light_background"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:background="#E9E9E9"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nm_can1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:padding="15dp"
                        android:text="Kandidat No.1"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/img_can1"
                        android:layout_width="match_parent"
                        android:layout_height="229dp"
                        app:srcCompat="@drawable/candidate" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_plh_can1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:text="Pilih"
                            android:textColor="@color/cardview_light_background" />

                        <Button
                            android:id="@+id/btn_dtl_can1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Detail kandidat" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:background="#E9E9E9"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nm_can2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:padding="15dp"
                        android:text="Kandidat No.2"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="20dp" />

                    <ImageView
                        android:id="@+id/img_can2"
                        android:layout_width="match_parent"
                        android:layout_height="229dp"
                        app:srcCompat="@drawable/candidate" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btn_plh_can2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:text="Pilih"
                            android:textColor="@color/cardview_light_background" />

                        <Button
                            android:id="@+id/btn_dtl_can2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Detail kandidat" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>